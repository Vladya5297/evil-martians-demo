{
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./",
        "plugins": [{
            "name": "typescript-plugin-css-modules",
            "options": {
                "customMatcher": "\\.css$",
            }
        }]
    },
    "include": [
        "./src"
    ],
}